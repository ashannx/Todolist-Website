<%- include("partials/header") -%>
<div class="col-md-4 mt-3 col-xs-12">
  <div class="text-start w-100 mb-4 breadcrumbs">
    <a href="/" class="text-start"><u>Home</u></a>
    &nbsp;<i class="fa fa-angle-double-right"></i>&nbsp;
    Lists
  </div>

  <h1>Choose a List!</h1>
  <br>


  <div class="list-group mb-3">
  <% for (let i = 0; i < userLists.length; i++) { %>
    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/lists/<%= userLists[i].link %>">
      <%= userLists[i].displayName %>
      <span class="badge bg-secondary rounded-pill"><%= String(userLists[i].items.length) %></span>
    </a>
  <% } %>
  </div>



  <form action="/lists" method="post">
    <div class="d-flex">
      <input type="text" class="form-control add-input text-center" placeholder="type new title here, click + to add a new list --->" name="newListTitle">
      <button class="btn btn-lg btn-outline-secondary add-button" type="submit">+</button>
    </div>
  </form>

  <br>


</div>
<%- include("partials/footer") -%>
